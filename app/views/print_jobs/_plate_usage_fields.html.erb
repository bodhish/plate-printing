<div class="nested-fields mt-4">
  <%= f.select :plate_dimension_id, @presenter.plate_dimensions, { selected: f&.object&.plate_dimension&.id, label: "Plate Dimension" }, { class: "plate-dimension-dropdown" } %>
  <%= f.number_field :set, required: true %>
  <%= f.number_field :color, required: true %>
  <%= f.number_field :wastage, required: true %>
  <%= f.number_field :price, required: true %>
  <%= link_to_remove_association t("- Remove Plate"), f ,class: 'bg-red-400 p-1 rounded text-xs text-white'%>
  <hr/>
</div>